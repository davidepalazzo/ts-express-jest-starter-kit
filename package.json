{
  "name": "ts-express-jest-starter-kit",
  "version": "1.0.0",
  "description": "A starter kit for building Node.js apps using TypeScript, Express and Jest",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev src/index.ts",
    "test": "jest src/",
    "test:watch": "jest --watchAll --no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "jest",
    "rest-api",
    "supertest",
    "docker"
  ],
  "author": "Davide Palazzo <davide@revengecreative.com>",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.11",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^4.1.5"
  },
  "devDependencies": {
    "@jest-mock/express": "^1.1.7",
    "@types/body-parser": "^1.19.0",
    "@types/jest": "^25.2.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^25.2.7",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1"
  }
}
